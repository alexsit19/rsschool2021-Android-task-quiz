        <item name="colorSecondary">@color/yellow_green</item>
        <item name="colorSecondaryVariant">@color/spring_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
    </style>

    <style name="Theme.Quiz.Third" parent="Theme.Quiz">
